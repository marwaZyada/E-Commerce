@model UserFormViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit  @Model.UserName</h1>

<form asp-action="Edit" method="post">
    <input type="text" asp-for="@Model.UserId" hidden/>
    <div class="d-flex">
        <label asp-for="@Model.UserName" class="col-form-label me-2"></label>
        <input type="text" asp-for="@Model.UserName" class="form-control" readonly/>
    </div>
    <hr />
    <h4>Generate Roles</h4>
    <br />
    <br />
    @for(int i=0;i<Model.Roles.Count;i++ )
    {
        <div class="d-flex mb-2">
            <input asp-for="@Model.Roles[i].Name" class="form-control " hidden />
            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-inline " />
            <label asp-for="@Model.Roles[i].Name" class="form-check-label">@Model.Roles[i].Name</label>
           
        </div>
    }
    <input type="submit" value="Save" class="btn btn-primary"/>
</form>