@model IEnumerable<ProductBrand>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductBrands</h1>
<partial name="_Create" model="new ProductBrandViewModel()"/>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered w-100 m-auto">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p => p.Id)</th>
                <th>@Html.DisplayNameFor(p => p.Name)</th>
         
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {
                <tr>
                    <td>@brand.Id</td>
                    <td>@brand.Name</td>
                    
                    <td class="d-flex flex-column  justify-content-center gap-2">

                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@brand.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="alert alert-danger">There is no Product</p>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
