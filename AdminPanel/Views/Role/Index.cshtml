@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Roles</h1>
<br />
<br />
<partial name="_Create" model="new RoleFormViewModel()"/>
<br/>
<br />
@if (Model.Count() > 0)
{
<table class="table table-bordered w-75 m-auto">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(r=>r.Id)</th>
            <th>@Html.DisplayNameFor(r=>r.Name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
            <td>@role.Name</td>
                    <td>
                        <a class="btn btn-success ms-2" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
        </tr>
        }
    </tbody>
</table>
  
}
else{
<p class="alert alert-danger">There is no Role</p>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
