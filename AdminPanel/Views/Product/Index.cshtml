@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
<a class="btn btn-primary" asp-action="Create">Add New Product</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered w-100 m-auto">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p=>p.Name)</th>
                <th>@Html.DisplayNameFor(p=>p.Description)</th>
                <th>@Html.DisplayNameFor(p => p.Price)</th>
                <th>@Html.DisplayNameFor(p => p.PictureUrl)</th>
                <th>@Html.DisplayNameFor(p => p.ProductBrand)</th>
                <th>@Html.DisplayNameFor(p => p.ProductType)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td><img src="~/@product.PictureUrl"width="100"/></td>
                    <td>@product.ProductBrand.Name</td>
                    <td>@product.ProductType.Name</td>
                    <td class="d-flex flex-column  justify-content-center gap-2">
                        <a class="btn btn-success " asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="alert alert-danger">There is no Product</p>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}